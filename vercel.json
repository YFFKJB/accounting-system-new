{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/register",
      "dest": "/api/register.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/login",
      "dest": "/api/login.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/records",
      "dest": "/api/records.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/records/(?<id>[^/]+)",
      "dest": "/api/records.js",
      "methods": ["DELETE"]
    },
    {
      "src": "/api/admin/check",
      "dest": "/api/admin/check.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/admin/users",
      "dest": "/api/admin/users.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/admin/users/(?<id>[^/]+)",
      "dest": "/api/admin/users.js",
      "methods": ["DELETE"]
    },
    {
      "src": "/api/admin/archive",
      "dest": "/api/admin/archive.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/archives",
      "dest": "/api/admin/archives.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/admin/unarchive",
      "dest": "/api/admin/unarchive.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/export",
      "dest": "/api/admin/export.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/admin/import",
      "dest": "/api/admin/import.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/statistics",
      "dest": "/api/admin/statistics.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/statistics",
      "dest": "/api/statistics.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 
